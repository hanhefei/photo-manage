.preview {
    position: relative;
    width: 594rpx;
    height: 840rpx;
    padding: 0 78rpx;
}
.preview .bg {
    width: 100%;
    height: 100%;
    position: relative;
    background: white;
    overflow: hidden;
}
.preview .preview_btn {
    position: absolute;
    left: 0;
    bottom: 42rpx;
    width: 100%;
    display: flex;
    justify-content: space-around;
}
.preview .preview_btn button {
    width:312rpx;
    height:96rpx;
    background:rgba(255,255,255,1);
    box-shadow:0px 0px 8rpx 0px rgba(0,0,0,0.2);
    border-radius:48rpx;
    color: #333333;
    font-size: 34rpx;
    line-height: 96rpx;
    text-align: center;
}
.name_box {
    width: 100%;
    display: flex;
    justify-content: center;
    margin-top: 60rpx;
    margin-bottom: 86rpx;
}
.name_box .name {
    width:670rpx;
    height:96rpx;
    background:rgba(255,255,255,1);
    box-shadow:0px 0px 8rpx 0px rgba(0,0,0,0.2);
    border-radius:16rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}
.bottom_btn {
    display: flex;
}
.bottom_btn button{
    width:292rpx;
    height:96rpx;
    background:linear-gradient(180deg,rgba(250,57,135,1) 0%,rgba(250,16,96,1) 100%);
    border-radius:48rpx;
    color: #FFFFFF;
    font-size: 34rpx;
    line-height: 96rpx;
    text-align: center;
}
.bottom_btn .right {
    width: 336rpx;
}
.weui-input{
    width: 256rpx;
    text-align: center;
}

.save_name {
    width:520rpx;
    height:98rpx;
    margin: 0 auto;
    background: linear-gradient(180deg,rgba(250,57,135,1) 0%,rgba(250,16,96,1) 100%);
    border-radius: 48rpx;
    color: #FFFFFF;
    font-size: 34rpx;
    line-height: 98rpx;
    text-align: center;
}
.shu {
    writing-mode:vertical-lr;
  }

.isLogin {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, .5);
    z-index: 20;
}
.login_box {
    overflow: hidden;
    position: absolute;
    top: 50%;
    left: 50%;
    width: 630rpx;
    height: 260rpx;
    background: #fff;
    border-radius: 16rpx;
    transform: translate(-50%, -50%);
}
.login_box text {
    display: block;
    margin-top: 40rpx;
    line-height: 44rpx;
    font-size: 32rpx;
    text-align: center;
}
.login_box button {
    display: block;
    width: 96rpx;
    height: 96rpx;
    margin: 0 auto;
    margin-top: 40rpx;
    padding: 0;
}
.login_box button image {
    display: block;
    width: 100%;
    height: 100%;
}