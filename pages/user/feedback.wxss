/* pages/personalCenter/feedback.wxss */
.box{
    padding: 40rpx;
}
.input{
    background:rgba(255,255,255,1);
    border-radius:24rpx;
    padding: 30rpx;
}
.textarea{
    margin-bottom: 30rpx;
    font-size: 32rpx;
}
.upload{
    display: flex;
    margin-top: 30rpx;
}
.upload text{
    color: #333333;
    font-size: 28rpx;
    margin-bottom: 20rpx;
}
.upload .imgList{
    width: 160rpx;
    height: 160rpx;
    position: relative;
    margin-right: 40rpx;
}
.upload .imgList .everyImg {
    width: 100%;
    height: 100%;
}
.upload .imgList .delImg{
    width: 36rpx;
    height: 36rpx;
    position: absolute;
    top: -18rpx;
    right: -18rpx;
}
.upload .addImg{
    width: 160rpx;
    height: 160rpx; 
}


.box button{
    width:520rpx;
    height:96rpx;
    line-height: 96rpx;
    margin-top: 60rpx;
    color: white;
    font-size: 36rpx;
    background:linear-gradient(180deg,rgba(250,57,135,1) 0%,rgba(250,16,96,1) 100%);
    box-shadow:0px 6rpx 16rpx 0px rgba(255,15,102,0.47);
    border-radius:48rpx;
}