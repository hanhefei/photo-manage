.box {
    padding: 0 30rpx;
    border-top: 2rpx solid rgba(0, 0, 0, 0.25);
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}

.box .everyBox {
    position: relative;
    width: 290rpx;
    height: 220rpx;
    background: rgba(255, 255, 255, 1);
    border-radius: 10rpx;
    float: left;
    margin-top: 76rpx;
    padding: 20rpx;
}

.box .everyBox .image {
    width: 290rpx;
    height: 180rpx;
    box-shadow: 0px 4rpx 8rpx 0px rgba(0, 0, 0, 0.5);
    border-radius: 10rpx;
    position: absolute;
    top: -36rpx;
    display: flex;
    justify-content: space-around;
    align-items: center;
}

.box .everyBox .image .shu {
    width: 1rpx;
    height: 96%;
    border: 1rpx solid rgba(0, 0, 0, 0.1);
}

.box .everyBox .image image {
    width: 48%;
    height: 100%;
    border-radius: 10rpx;
}

.box .everyBox .bottom {
    position: absolute;
    left: 5%;
    width: 90%;
    bottom: 10rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 90rpx;
}

.box .everyBox .bottom .text {
    /* position: absolute;
    right: 20rpx;
    top: 0;
    width: 90rpx; */

    display: flex;
    justify-content: space-between;
    align-items: center;
}

.box .everyBox .bottom .title {
    /* position: relative; */
    color: #333333;
    font-size: 28rpx;
}

.everyTitle {
    display: flex;
    width: 100%;
    height: 38rpx;
    line-height: 38rpx;
    justify-content: space-between;
    align-items: center;
}

.everyTitle text:first-child {
    overflow: hidden;
    display: block;
    width: 220rpx;
    line-height: 38rpx;
    text-overflow: ellipsis;
}

.box .everyBox .bottom .title .input {
    width: 220rpx;
    height: 38rpx;
    min-height: 38rpx;
}

.box .everyBox .bottom .title .take {
    color: rgba(102, 102, 102, 1);
    width: 30rpx;
    height: 30rpx;
}

.box .everyBox .bottom .text .left {
    color: rgba(102, 102, 102, 1);
    font-size: 28rpx;
}

.box .everyBox .bottom .text .right {
    color: rgba(102, 102, 102, 1);
    font-size: 28rpx;
}
.handleTxt {
    display: flex;
    align-items: center;
}
.handleTxt .left:first-child {
    margin-right: 60rpx;
}