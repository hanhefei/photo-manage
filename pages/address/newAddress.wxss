/* pages/personalCenter/address/newAddress.wxss */
.box{
    padding: 40rpx;
}
.newAddress{
    background:rgba(255,255,255,1);
    border-radius:16rpx;
    padding-left: 30rpx;
}
.everyInput{
    display: flex;
    height: 100rpx;
    align-items: center;
    justify-content: space-between;
    border-bottom: 2rpx solid rgba(242,242,242,1);
}
.everyInput .name{
    font-size:28rpx;
    color:rgba(51,51,51,1);
    margin-right: 48rpx;
}
.everyInput .weui-input{
    width: 450rpx;
    padding-right: 30rpx;
    font-size: 28rpx;
}
.detailed{
    height: 140rpx;
}
.switch{
    height: 104rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-right: 30rpx;
}
.switch .switch_text{
    font-size: 28rpx;
    color:rgba(51,51,51,1);
}
.textarea{
    height: 100rpx;
    width: 480rpx;
}
.btn{
    width:520rpx;
    height:96rpx;
    background:linear-gradient(180deg,rgba(250,57,135,1) 0%,rgba(250,16,96,1) 100%);
    box-shadow:0px 6rpx 16rpx 0px rgba(255,15,102,0.47);
    border-radius:48rpx;
    position: fixed;
    color:rgba(255,255,255,1);
    font-size: 32rpx;
    line-height: 96rpx;
    text-align: center;
    left: 50%;
    margin-left: -260rpx;
    bottom: 108rpx;
}