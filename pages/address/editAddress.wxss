/* pages/personalCenter/address/newAddress.wxss */
.box{
    padding: 40rpx;
}
.newAddress{
    background:rgba(255,255,255,1);
    border-radius:16rpx;
    padding-left: 30rpx;
}
.everyInput{
    display: flex;
    height: 100rpx;
    align-items: center;
    justify-content: space-between;
    border-bottom: 2rpx solid rgba(242,242,242,1);
}
.everyInput .name{
    font-size:28rpx;
    color:rgba(51,51,51,1);
    margin-right: 48rpx;
}
.everyInput .weui-input{
    width: 450rpx;
    padding-right: 30rpx;
    font-size: 28rpx;
}
.detailed{
    padding-top: 20rpx;
    padding-bottom: 20rpx;
    height: 100rpx;
}
.switch{
    height: 104rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-right: 30rpx;
}
.switch .switch_text{
    font-size: 28rpx;
    color:rgba(51,51,51,1);
}
.textarea{
    height: 70rpx;
}
.btn{
    width: 100%;
    position: fixed;
    bottom: 108rpx;
    display: flex;
    justify-content: space-around;
}
.btn .left{
    width:312rpx;
    height:96rpx;
    font-size: 36rpx;
    color: white;
    background:linear-gradient(180deg,rgba(250,57,135,1) 0%,rgba(250,16,96,1) 100%);
    box-shadow:0px 6rpx 16rpx 0px rgba(255,15,102,0.47);
    border-radius:48rpx;
    line-height: 96rpx;
}
.btn .right{
    width:312rpx;
    height:96rpx;
    font-size: 36rpx;
    background:rgba(255,255,255,1);
    box-shadow:0px 6rpx 16rpx 0px rgba(0,0,0,0.1);
    border-radius:48rpx;
    line-height: 96rpx;
}

.delShow{
    position: fixed;
    top: 0;
    width: 100%;
    height: 100%;
    background:rgba(0,0,0,.5);
    z-index: 9;
    display: flex;
    justify-content: center;
    align-items: center;
}
.delShow .delShow_box{
    width:690rpx;
    height:372rpx;
    background:rgba(255,255,255,1);
    border-radius:16rpx;
    display: flex;
    flex-direction: column;
    z-index: 9;
}
.delShow .delShow_box .top {
    height: 244rpx;
    border-bottom: 2rpx solid rgba(242,242,242,1);
    display: flex;
    justify-content: center;
    align-items: center;
}
.delShow .delShow_box .top .text {
    color:rgba(51,51,51,1);
    font-size: 32rpx;
}
.delShow .delShow_box .down {
    display: flex;
}
.delShow .delShow_box .down .left{
    display: block;
    width: 342rpx;
    height: 128rpx;
    border-right: 2rpx solid rgba(242,242,242,1);
    text-align: center;
    line-height: 128rpx;
    color:rgba(153,153,153,1);
    font-size: 32rpx;
}
.delShow .delShow_box .down .right{
    display: block;
    width: 342rpx;
    height: 128rpx;
    text-align: center;
    line-height: 128rpx;
    color:rgba(255,6,98,1);
    font-size: 32rpx;
}