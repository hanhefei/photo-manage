page {
    padding-bottom: 204rpx;
}
.box{
    padding: 40rpx;
}
.list{
    background:rgba(255,255,255,1);
    border-radius:16rpx;
    margin-bottom: 30rpx;
    padding: 30rpx;
    padding-right: 10rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.list .info{
    display: flex;
    flex-direction: column;
}
.list .info .addree{
    font-size: 28rpx;
    color:rgba(51,51,51,1);
    width: 500rpx;
    word-wrap: break-word;
}
.topInfo{
    display: flex;
    align-items: center;
    margin-bottom: 15rpx;
}
.topInfo .name{
    font-size: 32rpx;
    color:rgba(51,51,51,1);
}
.topInfo .tel{
    font-size: 26rpx;
    color:rgba(102,102,102,1);
    margin-left: 20rpx;
}
.list .edit{
    width: 92rpx;
    height: 46rpx;
    text-align: center;
    font-size: 26rpx;
    color:rgba(153,153,153,1);
    border-left: 2rpx solid rgba(242,242,242,1);
}
.btn{
    width:520rpx;
    height:96rpx;
    background:linear-gradient(180deg,rgba(250,57,135,1) 0%,rgba(250,16,96,1) 100%);
    box-shadow:0px 6rpx 16rpx 0px rgba(255,15,102,0.47);
    border-radius:48rpx;
    position: fixed;
    color:rgba(255,255,255,1);
    font-size: 32rpx;
    line-height: 96rpx;
    text-align: center;
    left: 50%;
    bottom: 108rpx;
    transform: translateX(-50%);
}

.isDefault {
    border: 2rpx solid red;
}