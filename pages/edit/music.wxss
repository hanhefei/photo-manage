.box{
    padding: 40rpx;
    border-top: 2rpx solid rgba(0,0,0,0.25);
}
.box .everyMusic {
    height:48px;
    background:rgba(255,255,255,1);
    box-shadow:0px 0px 8rpx 0px rgba(0,0,0,0.2);
    border-radius:16rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-left: 30rpx;
    padding-right: 30rpx;
    margin-bottom: 30rpx;
}
.box .noMusic {
    margin-bottom: 60rpx;
}
.box .everyMusic image {
    width: 48rpx;
    height: 48rpx;
}
.box .everyMusic .play {
    margin-right: 40rpx;
}
.btn {
    position: fixed;
    bottom: 108rpx;
    width:520rpx;
    height:96rpx;
    background:linear-gradient(180deg,rgba(250,57,135,1) 0%,rgba(250,16,96,1) 100%);
    box-shadow:0px 6rpx 16rpx 0px rgba(255,15,102,0.47);
    border-radius:24px;
    font-size: 36rpx;
    color: #FFFFFF;
    left: 50%;
    margin-left: -260rpx;
}