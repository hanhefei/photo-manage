.container {
    overflow: hidden;
}
.everyCss {
    display: flex;
    margin: 16rpx 30rpx 0 30rpx;
    padding: 30rpx;
    background: #fff;
    border-radius: 16rpx;
    align-items: center;
}
.address > image {
    display: block;
    width: 80rpx;
    height: 80rpx;
    margin-right: 20rpx;
}
.addressInfo {
    display: flex;
    width: 530rpx;
    flex-direction: column;
}
.addressInfo > text {
    display: block;
    margin-top: 8rpx;
    line-height: 40rpx;
    font-size: 28rpx;
    color: #333;
    word-wrap: break-word;
}
.addressInfo_msg {
    line-height: 40rpx;
    font-size: 28rpx;
    color: #333;
}
.addressInfo_msg text {
    margin-left: 20rpx;
    color: #999;
}

.book > image {
    display: block;
    width: 170rpx;
    height: 240rpx;
    margin-right: 20rpx;
}
.bookInfo {
    display: flex;
    width: 530rpx;
    height: 200rpx;
    flex-direction: column;
}
.bookTitle {
    display: flex;
    line-height: 40rpx;
    font-size: 28rpx;
    justify-content: space-between;
    align-items: center;
}
.bookTitle text:first-child {
    overflow: hidden;
    width: 340rpx;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.bookTitle text:last-child {
    width: 120rpx;
    text-align: right;
}
.bookNum {
    display: flex;
    margin-top: 6rpx;
    line-height: 40rpx;
    font-size: 28rpx;
    color: #666;
    justify-content: space-between;
    align-items: center;
}
.bookNum text:first-child {
    font-size: 24rpx;
    color: #999;
}
.bookMaterial {
    margin-top: 6rpx;
}
.bookMaterial text {
    display: inline-block;
    padding: 4rpx;
    background: #F2F2F2;
    font-size: 24rpx;
    color: #999999;
}

.txt {
    font-size: 28rpx;
    justify-content: space-between;
}
.txt input {
    width: 450rpx;
}

.msg {
    display: block;
    padding: 0 30rpx;
}
.msgTxt {
    display: flex;
    height: 90rpx;
    line-height: 90rpx;
    font-size: 28rpx;
    color: #333;
    justify-content: space-between;
    align-items: center;
}

.payInfo {
    position: fixed;
    bottom: 108rpx;
    left: 0;
    width: 100%;
}
.payMoney {
    margin: 0 auto;
    margin-bottom: 20rpx;
    font-size: 36rpx;
    color: #333;
    text-align: center;
}
.payMoney text {
    font-size: 48rpx;
    color: #FF0662;
}
.payBtn {
    display: block;
    width: 520rpx;
    height: 96rpx;
    margin: 0 auto;
    background: linear-gradient(180deg,rgba(250,57,135,1) 0%,rgba(250,16,96,1) 100%);
    box-shadow: 0px 6rpx 16rpx 0px rgba(255,15,102,0.47);
    border-radius: 48rpx;
    line-height: 96rpx;
    font-size: 36rpx;
    color: #fff;
    text-align: center;
}