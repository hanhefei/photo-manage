.box{
    padding: 30rpx;
    border-top: 2rpx solid rgba(0,0,0,0.25);
}
.nav{
    width: 690rpx;
    display: flex;
    justify-content: space-between;
}
.everyNav{
    height: 50rpx;
    font-size: 28rpx;
    color: #666666;
}
.cur{
    color: #FF0662;
    border-bottom: 4rpx solid  #FF0662;
    margin-bottom: 30rpx;
}
.everyOrder{
    background:rgba(255,255,255,1);
    border-radius:8px;
    margin-bottom: 16rpx;
}
.everyOrder .orderInfo{
    height: 100rpx;
    border-bottom: 2rpx solid rgba(242,242,242,1);
    padding-left: 30rpx;
    padding-right: 30rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.everyOrder .orderInfo .orderNumber{
    color:rgba(102,102,102,1);
    font-size: 28rpx;
}
.everyOrder .orderInfo .isPay{
    color:rgba(102,102,102,1);
    font-size: 28rpx;
}
.everyOrder .orderInfo .isPay image{
    margin-left: 20rpx;
}
.everyOrder .goods {
    padding: 30rpx;
    display: flex;
    border-bottom: 2rpx solid rgba(242,242,242,1);
}
.everyOrder .goods .img{
    width: 160rpx;
    height: 226rpx;
    margin-right: 30rpx;
}
.everyOrder .goods .img image{
    width: 100%;
    height: 100%;
}
.everyOrder .goods .text {
    display: flex;
    flex-direction: column;
}
.everyOrder .goods .text .name{
    color: #333333;
    font-size: 28rpx;
    margin-bottom: 10rpx;
}
.everyOrder .goods .text .time {
    color: #999999;
    font-size: 24rpx;
    margin-bottom: 38rpx;
}
.everyOrder .goods .text .money{
    color: #DA2626;
    font-size: 32rpx;
}
.everyOrder .btn {
    padding: 30rpx;
    display: flex;
    justify-content: flex-end;
}
.everyOrder .btn .left {
    width:174rpx;
    height:56rpx;
    border-radius:32rpx;
    border:1px solid rgba(102,102,102,1);
    font-size: 28rpx;
    text-align: center;
    line-height: 56rpx;
    color: #666666;
}
.everyOrder .btn .right{
    width:174rpx;
    height:56rpx;
    border-radius:32rpx;
    border:1px solid rgba(218,38,38,1);
    margin-left: 40rpx;
    font-size: 28rpx;
    text-align: center;
    line-height: 56rpx;
    color: #DA2626;
}