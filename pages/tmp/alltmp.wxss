page{
    padding-bottom: 30rpx;
    background: white;
}
.box{
    padding-left: 30rpx;
    padding-right: 30rpx;
    margin-top: 60rpx;
}
.everLine{
    height: 250rpx;
    display: flex;
    align-items: center;
    position: relative;
    padding-bottom: 40rpx;
    margin-bottom: 56rpx;
}
.everRow{
    width: 170rpx;
    height: 240rpx;
    margin: 0 60rpx;
    box-shadow:0px 0px 8rpx 0px rgba(0,0,0,0.15);
    position: relative;
    border-radius:16rpx;
    z-index: 9;
}
.everLine>.everRow:nth-child(1) {
    margin: 0;
    margin-left: 30rpx;
}
.everLine>.everRow:nth-child(3) {
    margin: 0;
    margin-right: 30rpx;
}
.everRow image {
    display: block;
    width: 100%;
    height: 100%;
    border-radius: 16rpx;
}
.bottom{
    width: 100%;
    height: 30rpx;
    position: absolute;
    bottom: 0;
    margin-top: 10rpx;
    box-shadow: 0rpx 10rpx 10rpx 10rpx  rgba(244,244,244,1);
    background: white;
}
.bottom-top{
    width: 650rpx;
    border-bottom: 10px solid rgba(244,244,244,1);
    border-left: 20rpx solid white;
    border-right: 20rpx solid white;
    position: absolute;
    bottom: 30rpx;
}
.everRow .text{
    overflow: hidden;
    width: 150rpx;
    height: 36rpx;
    padding: 0 10rpx;
    background:linear-gradient(180deg,rgba(244,95,136,1) 0%,rgba(250,60,113,1) 100%);
    font-size:24rpx;
    color:rgba(255,255,255,1);
    line-height:36rpx;
    text-align: center;
    position: absolute;
    border-bottom-right-radius:16rpx;
    border-bottom-left-radius:16rpx;
    bottom: 0;
    text-overflow: ellipsis;
    white-space: nowrap;
    z-index: 2;
}