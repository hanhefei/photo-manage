.box{
    display: flex;
    padding: 30rpx;
    padding-bottom: 150rpx;
    justify-content: space-between;
    flex-wrap: wrap;
}
.everyBox{
    width: 330rpx;
    height: 320rpx;
    display: flex;
    flex-direction: column ; 
    align-items: center;
}
.everyBox .everyImg{
    display: flex;
    width: 320rpx;
    height: 226rpx;
    margin-bottom: 10rpx;
    box-shadow:0px 0px 10rpx 0px rgba(0,0,0,0.21);
    border-radius:16rpx;
    border:6rpx solid rgba(255,255,255,1);
}
.everyBox .everyImg .line{
    width: 1rpx;
    height: 226rpx;
    border-left: 1rpx solid rgba(0, 0, 0, .5);
}
.everyBox .everyImg .everySmallImg{
    width: 161rpx;
    height: 226rpx;
    overflow: hidden;
    position: relative;
}
