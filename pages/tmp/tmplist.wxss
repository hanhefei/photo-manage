/* 预览 */
.preview{
    width: 100%;
    height: 100%;
    background:rgba(0,0,0,.5);
    position: fixed;
    top: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    z-index: 5;
}
.previewBox {
    position: absolute;
    top: 40%;
    transform: translateY(-50%);
    display: flex;
    justify-content: space-around;
    align-items: center;
    box-shadow: 0px 0px 5px 0px rgba(0, 0, 0, 0.21);
    border-radius: 8px;
    border: 3px solid rgba(255, 255, 255, 1);
}
.previewBox .everyPage .shu {
    writing-mode:vertical-lr;
  }
.previewBox .everyPage {
    width: 360rpx;
    height: 530rpx;
    overflow: hidden;
    position: relative;
    background: white;
}
.previewBox .line {
    width: 1rpx;
    height: 530rpx;
    border-left: 1rpx solid rgba(0, 0, 0, .1);
}
.preview .fail{
    width: 76rpx;
    height: 76rpx;
    position: absolute;
    bottom: -200rpx;
}